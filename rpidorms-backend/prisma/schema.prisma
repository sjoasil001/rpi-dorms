// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Submission {
  id         BigInt   @id @default(autoincrement())
  dorm_name  String
  class_year Int
  rating     Int
  amenities  Json
  review     String?
  photo_url  String
  created_at DateTime @default(now())

  @@index([dorm_name])
  @@index([class_year])
}
